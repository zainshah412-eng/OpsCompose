<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/air_awesome_purple" />
            <stroke android:width="0.5dp" android:color="@color/air_awesome_purple" />
            <size android:width="@dimen/_15sdp" android:height="@dimen/_15sdp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/air_awesome_purple_200" />
            <stroke android:width="0.5dp" android:color="@color/air_awesome_purple_200" />
            <size android:width="@dimen/_15sdp" android:height="@dimen/_15sdp" />
        </shape>
    </item>
</selector>